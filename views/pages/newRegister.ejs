<%- contentFor('body')  %>

<div class="jumbotron">
    <form action="/register/add" method="POST" autocomplete="on">
        <h2>Cadastrar novo aluno</h2>
        <div class="form-group">
          <label for="input-user-name">Nome</label>
          <input type="text" class="form-control" id="input-user-name" minlength=3 placeholder="Fulano de Tal" required name="name" value>
          <small id="nameHelp" class="form-text text-muted">We'll never share your name or nickname with anyone else.</small>
        </div>
        <div class="form-group">
          <label for="input-user-email">Endereço de email</label>
          <input type="email" class="form-control" id="input-user-email" minlength=5 aria-describedby="emailHelp" required placeholder="Enter email" name="email" value>
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        
        <div class="form-group" >
            <label class="form-check-label" for="userVoted">Deseja receber email sobre as aulas?</label>

            <div class="form-check">
                <input class="form-check-input" type="radio" name="vote" id="vote_yes" value="voted-yes">
                <label class="form-check-label" for="vote_yes">
                Sim
                </label>
            </div>

            <div class="form-check" id="userVoted">
                <input class="form-check-input" type="radio" name="vote" id="vote_no" value="voted-no" checked>
                <label class="form-check-label" for="vote_no">
                Não
                </label>
            </div>
          
        </div>
        <button class="btn btn-primary">Registrar</button>

      </form>
</div>